<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/text_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="证券"
        android:textSize="15dp"
        android:padding="5dp"
        android:textColor="@color/greytext"
        android:textAlignment="center"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintRight_toLeftOf="@+id/text_newest"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/text_newest"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="最新"
        style="@style/textStyle_hometitle"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/text_title"
        app:layout_constraintRight_toLeftOf="@+id/text_percent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_percent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="涨幅"
        style="@style/textStyle_hometitle"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/text_newest"
        app:layout_constraintRight_toLeftOf="@+id/text_dp"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/text_dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="涨跌"
        style="@style/textStyle_hometitle"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/text_percent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/stocksRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_title" />

</androidx.constraintlayout.widget.ConstraintLayout>